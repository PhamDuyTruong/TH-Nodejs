<div class="row">
      {{#each products}}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="{{image_path}}" alt="hinh anh" class="img-responsive img-detail">
                <div class="caption">
                    <h3>{{title}}</h3>
                    <p>
                    <div class="description Cdiv">
                        {{description}}
                    </div>
                    </p>
                    <div class="clearfix">
                        <div class="price pull-left">Price : ${{price}}</div><br>
                    </div>
                </div>
                <div class="text-center">
                    <!--<button type="button" class="btn btn-success pull-right"><i class="fa fa-shopping-cart"></i> Add To Cart</button>-->
                    <a href="../../product/update/{{id}}" class="btn btn-primary"><span class="fa fa-shopping-cart"></span> Update </a>
                    <a href="../{{id}}"><i class="fa fa-search"></i> Quick View</a>
                </div>
            </div>
        </div>
        {{/each}}
</div>

